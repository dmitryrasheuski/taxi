<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="entity.order">
    <class name="Order" table="orders" >

        <id name="id" >
            <generator class="identity" />
        </id>
        <property name="comment" />
        <many-to-one name="passenger" column="passenger_id" class="entity.user.User" />
        <many-to-one name="car" column="car_id" class="entity.car.Car" />
        <many-to-one name="from" column="from_id" class="Address" />
        <many-to-one name="where" column="where_id" class="Address" />

    </class>
</hibernate-mapping>